<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="CDVOrientation">
        <param name="android-package" value="cordova.plugins.screenorientation.CDVOrientation" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="BackgroundMode">
        <param name="android-package" value="de.appplant.cordova.plugin.background.BackgroundMode" />
    </feature>
    <feature name="BackgroundModeExt">
        <param name="android-package" value="de.appplant.cordova.plugin.background.BackgroundModeExt" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <name>Sea Worm</name>
    <description>
        Underwater version of the famous Snake game.
    </description>
    <author email="jonathan.dimur@gmail.com" href="http://cordova.io">
        Product owned by JÂ® Studios
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon density="ldpi" height="80" src="res/android/icons8-ver-de-terre-80.png" width="80" />
    <icon density="mdpi" height="80" src="res/android/icons8-ver-de-terre-80.png" width="80" />
    <icon density="hdpi" height="80" src="res/android/icons8-ver-de-terre-80.png" width="80" />
    <icon density="xhdpi" height="80" src="res/android/icons8-ver-de-terre-80.png" width="80" />
    <splash density="mdpi" src="res/android/splashscreen.png" />
    <splash density="xh" src="res/android/splashscreen.png" />
    <splash density="hdpi" src="res/android/splashscreen.png" />
    <splash density="ldpi" src="res/android/splashscreen.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="KeepRunning" value="true" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="sensorLandscape" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
</widget>
